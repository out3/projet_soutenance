<%- include("../partials/header") %>

<div class="container">
    <div class="col">
        <div class="row justify-content-center">
            <form id="loginForm" class="col-lg-5 col-md-6 col-sm-8 col-10 needs-validation" action="/login" method="post" novalidate>
                <h4 class="text-center p-4"><i class="fas fa-user-circle fa-3x"></i></h4>
                <div class="form-group">
                    <label for="inputUsername">Nom d'utilisateur</label>
                    <input class="form-control" type="text" name="username" id="inputUsername" required>
                </div>
                <div class="form-group">
                    <label for="inputPassword">Mot de passe</label>
                    <input class="form-control" type="password" name="password" id="inputPassword" required>
                </div>
                <div class="form-group pt-2">
                    <button class="btn btn-md btn-dark btn-block" type="submit">Se connecter</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>
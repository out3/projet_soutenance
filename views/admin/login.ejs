<%- include("../partials/header") %>

<div class="container">
  <div class="d-flex justify-content-center pb-3">
    <div class="card col-lg-6 col-md-8 col-sm-10 col-11 px-0">
      <h4 class="card-head secondary-color white-text text-center py-4">
        Se connecter en tant qu'administrateur
      </h4>
      <div class="card-body">
        <form class="needs-validation" id="loginForm" action="/admin/login" method="post" novalidate>
          <h5 class="text-center"><i class="fas fa-user-circle fa-3x blue-grey-text"></i></h5>
          <div class="form-group md-form mx-2">
            <label for="inputUsername">Nom d'utilisateur</label>
            <input class="form-control" type="text" name="username" id="inputUsername" autocomplete="username" required>
          </div>
          <div class="form-group md-form mx-2">
            <label for="inputPassword">Mot de passe</label>
            <input class="form-control" type="password" name="password" id="inputPassword" autocomplete="password" required>
          </div>
          <div class="form-group pt-1">
            <button class="btn btn-md btn-secondary btn-block" type="submit">Se connecter</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
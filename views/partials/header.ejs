<body class="mb-4">
  <nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
    <div class="container">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav"
        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <div class="navbar-nav mr-auto">
          <a class="nav-item nav-link" href="/">Accueil</a>
          <% if(currentUser) {%>
          <a class="nav-item nav-link" href="/companies">Mes entreprises</a>
          <a class="nav-item nav-link" href="/applications">Mes candidatures</a>
          <% } %>
        </div>
        <div class="navbar-nav">
          <% if(!currentUser) { %>
          <a class="nav-item nav-link" href="/login">Se connecter</a>
          <a class="nav-item nav-link" href="/register">S'inscrire</a>
          <% } else { %>
          <a class="nav-item nav-link" href="/logout">Se dÃ©connecter</a>
          <% } %>
        </div>
      </div>
    </div>
  </nav>
  <div class="container">
    <% if(error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
      <%=error%>
    </div>
    <% }; %>
    <% if(success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
      <%=success%>
    </div>
    <% }; %>
    <% if(info && info.length > 0) { %>
      <div class="alert alert-info" role="alert">
        <%=info%>
      </div>
      <% }; %>
  </div>
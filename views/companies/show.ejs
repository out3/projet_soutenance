<%- include('../partials/header') %>

<div class="d-flex justify-content-center">
    <div class="col-sm-11 col-md-10 col-lg-9">
            <div class="card mb-3">
                <div class="card-body">
                    <h3 class="card-title text-center"><%=company.name%></h3>
                    <hr class="pb-2"> 
                    <div class="row justify-content-around">
                        <div class="col-xl-5 col-md-8 col-sm-12">
                            <div class="row justify-content-center align-items-center">
                                <p class="card-text pt-3 pr-3"><i class="fas fa-home"></i></p>
                                <p class="card-text align-self-center company-address">
                                    <%=company.name%><br>
                                    <%=company.address%><br>
                                    <%=company.postalCode%> - <%=company.city%>
                                </p>
                            </div>    
                        </div>
                        <div class="col-xl-4 col-md-4 col-sm-12 row justify-content-center align-items-center">
                            <p class="card-text pt-3 pr-3"><i class="fas fa-phone-square-alt"></i></p>
                            <p class="card-text phone-number"><%=company.phoneNumber%></p>
                        </div>
                        <div class="col-xl-3 col-md-6 col-sm-12 row justify-content-md-around justify-content-center">
                            <p class="card-text pt-3 mr-5 links-icons"><a href="<%=company.links.website%>" target="_blank"><i class="fas fa-globe-europe"></i></a></p>
                            <p class="card-text pt-3 links-icons"><a href="<%=company.links.linkedin%>" target="_blank"><i class="fab fa-linkedin"></i></a></p>
                        </div>
                    </div>
                </div>
                <div class="card-footer text-light">
                    <a href="/companies/contact/new"><button type="button" class="btn btn-dark btn-md float-right">Ajouter un nouveau contact</button></a>
                </div>
            </div>
    </div>
</div>

<%- include('../partials/footer') %>